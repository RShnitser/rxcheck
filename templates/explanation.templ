package templates

templ Explanation(question, explanation string){
    <div
        hx-target="this"
        hx-swap="outerHTML transition:true"
        class="slide-it bg-[#393E46] max-w-lg mx-auto border-solid border-2 rounded m-5 p-2.5"
    >
        <p class="text-[#EEEEEE] text-xl font-bold">{question}</p>
        <p class="text-[#DDDDDD] my-10 p-1">{explanation}</p>
        <form class="flex">
            <input type="hidden" name="answer" value="-1">
            <button class="w-full rounded-lg font-bold bg-[#FFD369] mx-auto m-1 p-1 hover:bg-amber-200 border-solid border-2" hx-post="/question" type="submit">Continue</button>
        </form>
    </div>
}