package templates

import(
    "fmt"
    "rxcheck/internal/database"
)

templ Game(classifications []database.ListDrugsByClassificationRow){
    <div
    class="bg-[#393E46] flex flex-col max-w-80 mx-auto border-solid border-2 rounded m-5 p-2.5"
    hx-target="this"
    hx-swap="outerHTML"
    >
        <p class="font-bold text-[#EEEEEE] text-center text-xl">Test Your Knowledge</p>
        <ul class="w-full flex flex-col py-2">
        for _, drugClass := range classifications {
            <li class="w-full border-t-2 border-[#DDDDDD] border-solid py-5">
                <div class="text-[#EEEEEE] font-bold">{ drugClass.Classification }</div>
                for _, drug := range drugClass.Drugs{
                    <div class="text-[#DDDDDD]">{drug}</div>
                }
                <button class="rounded-lg w-full m-1 p-1 bg-[#FFD369] font-bold border-solid border-2" hx-get={fmt.Sprintf("quiz/%s", drugClass.Classification)}>Practice</button>
            </li>
        }
        </ul>
    </div>
}